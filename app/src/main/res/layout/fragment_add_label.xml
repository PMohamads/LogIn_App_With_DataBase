<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddLabelFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Label"
        android:textSize="30sp"
        android:padding="5dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Label's Name : "
        android:textSize="16sp"
        android:padding="5dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="60dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="80dp"
        android:textSize="18sp"
        android:hint="Input Label Name"
        android:id="@+id/labelname"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Label's Description : "
        android:textSize="16sp"
        android:padding="5dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="145dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="170dp"
        android:textSize="18sp"
        android:hint="Input Label Description "
        android:layout_marginEnd="30dp"
        android:id="@+id/labeldesc"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add To DataBase"
        android:layout_marginStart="130dp"
        android:id="@+id/addtodatabase"
        android:background="@color/skyblue"
        android:padding="10dp"
        android:layout_marginTop="250dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="310dp"
        android:padding="5dp"
        android:text="Labels Number is : "
        android:textSize="16sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/labelnum"
        android:textSize="16sp"
        android:padding="5dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="310dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/grey"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:background="@color/skyblue"
            android:orientation="vertical"/>
    </ScrollView>


</FrameLayout>